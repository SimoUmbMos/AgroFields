<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary -->
        <item name="colorPrimary">@color/backgroundColor</item>
        <item name="colorOnPrimary">@color/textColor</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/backgroundColor</item>
        <item name="colorOnSecondary">@color/textColor</item>

        <!-- Error -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/errorTextColor</item>

        <!-- Menu -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimaryDark">@color/backgroundColor</item>
        <item name="actionModeBackground">@color/backgroundColor</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColor</item>
        <item name="colorControlNormal">@color/textColor</item>

        <!-- Background -->
        <item name="colorSurface">@color/backgroundColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorOnSurface">@color/textColor</item>
        <item name="colorOnBackground">@color/textColor</item>
        <item name="android:textColor">@color/textColor</item>

        <!-- Accent -->
        <item name="colorAccent">@color/accentColor</item>

        <item name="fontFamily">@font/main_font</item>
        <item name="android:fontFamily">@font/main_font</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- menu styles -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <style name="DrawerNavigationStyle" parent="AppTheme">
        <item name="colorSurface">@color/backgroundColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
    </style>

    <!-- fields styles -->
    <style name="TextInputFields" parent="AppTheme">
        <item name="colorPrimary">@color/textColor</item>
    </style>

    <style name="BorderlessButtonStyle" parent="AppTheme">
        <item name="colorPrimary">@color/textColor</item>
    </style>
    <style name="CustomSlider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/SliderStyle</item>
    </style>
    <style name="SliderStyle" parent="">
        <item name="colorPrimary">@color/accentColor</item>
        <item name="colorOnPrimary">@android:color/transparent</item>
    </style>

    <!-- dialog -->
    <style name="MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- text -->
        <item name="materialAlertDialogTitleTextStyle">@style/NormalAlertDialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogTextStyle</item>
        <item name="android:checkedTextViewStyle">@style/AlertDialogCheckedTextView</item>
        <!-- buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogButtonStyle</item>
        <!-- background -->
        <item name="android:background">@color/backgroundColor</item>
    </style>
    <style name="ErrorMaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- text -->
        <item name="materialAlertDialogTitleTextStyle">@style/ErrorAlertDialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogTextStyle</item>
        <item name="android:checkedTextViewStyle">@style/AlertDialogCheckedTextView</item>
        <!-- buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/ErrorAlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ErrorAlertDialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/ErrorAlertDialogButtonStyle</item>
        <!-- background -->
        <item name="android:background">@color/backgroundColor</item>
    </style>
    <style name="NormalAlertDialogTitleTextStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/accentColor</item>
    </style>
    <style name="ErrorAlertDialogTitleTextStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorError</item>
    </style>
    <style name="AlertDialogTextStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="AlertDialogCheckedTextView" parent="@style/Widget.MaterialComponents.CheckedTextView">
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="AlertDialogButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="ErrorAlertDialogButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorError</item>
    </style>
</resources>