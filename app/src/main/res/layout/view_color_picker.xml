<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/flColorShower"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flColorShower">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:text="@string/color_dialog_red_label" />

            <com.google.android.material.slider.Slider
                android:id="@+id/slRedSlider"
                style="@style/CustomSlider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:stepSize="1.0"
                android:value="128.0"
                android:valueFrom="0.0"
                android:valueTo="255.0"
                app:labelBehavior="floating" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:text="@string/color_dialog_green_label" />

            <com.google.android.material.slider.Slider
                android:id="@+id/slGreenSlider"
                style="@style/CustomSlider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:stepSize="1.0"
                android:value="128.0"
                android:valueFrom="0.0"
                android:valueTo="255.0"
                app:labelBehavior="floating" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:text="@string/color_dialog_blue_label" />

            <com.google.android.material.slider.Slider
                android:id="@+id/slBlueSlider"
                style="@style/CustomSlider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:stepSize="1.0"
                android:value="128.0"
                android:valueFrom="0.0"
                android:valueTo="255.0"
                app:labelBehavior="floating" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>