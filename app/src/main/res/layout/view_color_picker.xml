<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/flColorShower"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="#808080"
        app:layout_constraintDimensionRatio="w,1:6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/llColorGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:weightSum="8"
        app:layout_constraintDimensionRatio="w,1:8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flColorShower">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvColor1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/color_picker_1" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvColor2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/color_picker_2" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvColor3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/color_picker_3" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvColor4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/color_picker_4" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvColor5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/color_picker_5" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvColor6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/color_picker_6" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvColor7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/color_picker_7" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvColor8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/color_picker_8" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRedSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintEnd_toEndOf="@id/llColorGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llColorGrid">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/color_dialog_red_label" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slRedSlider"
            style="@style/CustomRedSlider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="4"
            android:stepSize="1.0"
            android:value="128.0"
            android:valueFrom="0.0"
            android:valueTo="255.0"
            app:labelBehavior="floating" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llGreenSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintEnd_toEndOf="@id/llRedSlider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llRedSlider">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/color_dialog_green_label" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slGreenSlider"
            style="@style/CustomGreenSlider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="4"
            android:stepSize="1.0"
            android:value="128.0"
            android:valueFrom="0.0"
            android:valueTo="255.0"
            app:labelBehavior="floating" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBlueSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llGreenSlider">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/color_dialog_blue_label" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slBlueSlider"
            style="@style/CustomBlueSlider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="4"
            android:stepSize="1.0"
            android:value="128.0"
            android:valueFrom="0.0"
            android:valueTo="255.0"
            app:labelBehavior="floating" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>