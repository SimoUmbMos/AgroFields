<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:orientation="vertical"
    tools:context=".fragments.features.CalendarNewEventFragment">

    <TextView
        android:id="@+id/tvSelectLandLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_land_label"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/svSelectedLand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/svSelectedLand" />

    <TextView
        android:id="@+id/tvSelectZoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_zone_label"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/svSelectedZone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/svSelectedZone" />

    <TextView
        android:id="@+id/tvSelectDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_date_label"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/etSelectedDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etSelectedDate" />

    <Spinner
        android:id="@+id/svSelectedLand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvSelectLandLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/svSelectedZone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvSelectZoneLabel"
        app:layout_constraintTop_toBottomOf="@+id/svSelectedLand" />

    <EditText
        android:id="@+id/etSelectedDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:focusable="false"
        android:hint="@string/select_date_label"
        android:importantForAutofill="no"
        android:inputType="date"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvSelectDateLabel"
        app:layout_constraintTop_toBottomOf="@+id/svSelectedZone" />

</androidx.constraintlayout.widget.ConstraintLayout>