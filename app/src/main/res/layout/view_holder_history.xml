<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/list_history_item_side_margin"
    android:layout_marginTop="@dimen/list_history_item_margin"
    android:layout_marginEnd="@dimen/list_history_item_side_margin"
    android:layout_marginBottom="@dimen/list_history_item_margin"
    app:strokeWidth="@dimen/cardStrokeWidth"
    app:cardElevation="@dimen/cardElevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_history_item_inner_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHistoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppTheme.Body"
            android:textStyle="bold"
            tools:text="LandTitle" />

        <LinearLayout
            android:id="@+id/clHistoryData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:divider="@drawable/divider_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:showDividers="middle|beginning"
            tools:ignore="UselessLeaf"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
