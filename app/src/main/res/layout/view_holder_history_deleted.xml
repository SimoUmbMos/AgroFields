<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/list_history_item_side_margin"
    android:layout_marginTop="@dimen/list_history_item_margin"
    android:layout_marginEnd="@dimen/list_history_item_side_margin"
    android:layout_marginBottom="@dimen/list_history_item_margin"
    app:cardBackgroundColor="@color/cardBackgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_history_item_inner_margin">

        <TextView
            android:id="@+id/tvHistoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/clHistoryData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:divider="@drawable/divider_linear_layout_list"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:showDividers="middle|beginning"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvHistoryTitle"
            app:layout_constraintStart_toStartOf="@+id/tvHistoryTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvHistoryTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
