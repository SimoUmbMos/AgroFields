<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_land_graph"
    app:startDestination="@id/LoadingFragment">

    <fragment android:id="@+id/AppSettingsFragment"
        android:name="com.mosc.simo.ptuxiaki3741.fragments.user.AppSettingsFragment"
        android:label="fragment_app_settings"
        tools:layout="@layout/fragment_app_settings" >
        <action android:id="@+id/toDegreeInfo"
            app:destination="@id/DegreeInfoFragment" />
    </fragment>
    <fragment android:id="@+id/DegreeInfoFragment"
        android:name="com.mosc.simo.ptuxiaki3741.fragments.user.DegreeInfoFragment"
        android:label="fragment_degree_info"
        tools:layout="@layout/fragment_degree_info" />
    <fragment android:id="@+id/LoadingFragment"
        android:name="com.mosc.simo.ptuxiaki3741.fragments.LoadingFragment"
        android:label="fragment_loading"
        tools:layout="@layout/fragment_loading" >
        <action android:id="@+id/toLoginRegister"
            app:destination="@id/LoginRegisterFragment"
            app:popUpTo="@+id/nav_land_graph"
            app:launchSingleTop="true"
            app:popUpToInclusive="true"/>
        <action android:id="@+id/toMenuMain"
            app:destination="@id/MenuMainFragment"
            app:popUpTo="@+id/nav_land_graph"
            app:launchSingleTop="true"
            app:popUpToInclusive="true" />
        <action android:id="@+id/toMapFile"
            app:destination="@id/MapFileFragment"
            app:popUpTo="@+id/nav_land_graph"
            app:launchSingleTop="true"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment android:id="@+id/LoginRegisterFragment"
        android:name="com.mosc.simo.ptuxiaki3741.fragments.LoginRegisterFragment"
        android:label="fragment_login_register"
        tools:layout="@layout/fragment_login_register" >
        <action android:id="@+id/toMenuMain"
            app:destination="@id/MenuMainFragment"
            app:popUpTo="@id/nav_land_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment android:id="@+id/MapFileFragment"
        android:name="com.mosc.simo.ptuxiaki3741.fragments.MapFileFragment"
        android:label="fragment_file_map"
        tools:layout="@layout/fragment_file_map" >
        <action
            android:id="@+id/toMapLandEditor"
            app:destination="@id/MapLandEditorFragment"
            app:popUpTo="@id/MenuLandsFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment android:id="@+id/MapLandEditorFragment"
        android:name="com.mosc.simo.ptuxiaki3741.fragments.land.MapLandEditorFragment"
        android:label="fragment_land_map"
        tools:layout="@layout/fragment_land_map" >
        <action android:id="@+id/toProfileLand"
            app:destination="@id/ProfileLandFragment" />
        <action android:id="@+id/toMenuLands"
            app:destination="@id/MenuLandsFragment"
            app:popUpTo="@id/MenuLandsFragment"
            app:popUpToInclusive="true"/>
        <action android:id="@+id/toMapFile"
            app:destination="@id/MapFileFragment" />
    </fragment>
    <fragment android:id="@+id/MapLandPreviewFragment"
        android:name="com.mosc.simo.ptuxiaki3741.fragments.land.MapLandPreviewFragment"
        android:label="fragment_land_map_preview"
        tools:layout="@layout/fragment_land_map_preview">
        <action
            android:id="@+id/toMapLandEditor"
            app:destination="@id/MapLandEditorFragment"
            app:popUpTo="@id/MenuLandsFragment"
            app:popUpToInclusive="false"/>
        <action android:id="@+id/toLandHistory"
            app:destination="@id/LandHistorySelectedFragment"/>
    </fragment>
    <fragment android:id="@+id/LandHistorySelectedFragment"
        android:name="com.mosc.simo.ptuxiaki3741.fragments.land.LandHistorySelectedFragment"
        android:label="fragment_land_history_menu"
        tools:layout="@layout/fragment_land_history_selected" >
        <action android:id="@+id/toMapLandPreview"
            app:destination="@id/MapLandPreviewFragment" />
    </fragment>
    <fragment android:id="@+id/LandHistoryDeletedFragment"
        android:name="com.mosc.simo.ptuxiaki3741.fragments.land.LandHistoryDeletedFragment"
        android:label="fragment_land_history_menu"
        tools:layout="@layout/fragment_land_history_deleted" >
        <action android:id="@+id/toMapLandPreview"
            app:destination="@id/MapLandPreviewFragment" />
    </fragment>
    <fragment android:id="@+id/MenuLandsFragment"
        android:name="com.mosc.simo.ptuxiaki3741.fragments.land.MenuLandsFragment"
        android:label="fragment_land_collection"
        tools:layout="@layout/fragment_menu_land" >
        <action android:id="@+id/toProfileLand"
            app:destination="@id/ProfileLandFragment" />
        <action android:id="@+id/toMapLandPreview"
            app:destination="@id/MapLandPreviewFragment" />
        <action android:id="@+id/toLandsHistory"
            app:destination="@id/LandHistoryDeletedFragment" />
    </fragment>
    <fragment android:id="@+id/MenuMainFragment"
        android:name="com.mosc.simo.ptuxiaki3741.fragments.MenuMainFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu_main" >
        <action android:id="@+id/toLoading"
            app:destination="@id/LoadingFragment"
            app:popUpTo="@id/nav_land_graph"
            app:popUpToInclusive="true" />
        <action android:id="@+id/toProfileUser"
            app:destination="@id/ProfileUserFragment" />
        <action android:id="@+id/toMenuLands"
            app:destination="@id/MenuLandsFragment" />
        <!--todo: create landSelectMenu -->
        <action android:id="@+id/toMenuContacts"
            app:destination="@id/ContactsContainerFragment" />
        <action android:id="@+id/toAppSettings"
            app:destination="@id/AppSettingsFragment" />
    </fragment>
    <fragment android:id="@+id/ProfileLandFragment"
        android:name="com.mosc.simo.ptuxiaki3741.fragments.land.ProfileLandFragment"
        android:label="fragment_land_info"
        tools:layout="@layout/fragment_land_info" >
        <action
            android:id="@+id/toMapLandEditor"
            app:destination="@id/MapLandEditorFragment"
            app:popUpTo="@id/MenuLandsFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment android:id="@+id/ProfileUserFragment"
        android:name="com.mosc.simo.ptuxiaki3741.fragments.user.ProfileUserFragment"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" >
        <action android:id="@+id/toLoading"
            app:destination="@id/LoadingFragment"
            app:popUpTo="@id/nav_land_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment android:id="@+id/ContactsContainerFragment"
        android:name="com.mosc.simo.ptuxiaki3741.fragments.contacts.ContactsContainerFragment"
        android:label="fragment_contacts_container"
        tools:layout="@layout/fragment_contacts_container">
        <action android:id="@+id/toProfileContact"
            app:destination="@id/ProfileContactFragment"/>
    </fragment>

    <fragment android:id="@+id/ProfileContactFragment"
        android:name="com.mosc.simo.ptuxiaki3741.fragments.contacts.ProfileContactFragment"
        android:label="fragment_contact_profile"
        tools:layout="@layout/fragment_contact_profile" >
        <action android:id="@+id/toShareLand"
            app:destination="@id/ShareLandFragment" />
    </fragment>
    <fragment android:id="@+id/ShareLandFragment"
        android:name="com.mosc.simo.ptuxiaki3741.fragments.contacts.ShareLandFragment"
        android:label="fragment_selected_share_land"
        tools:layout="@layout/fragment_selected_share_land" />
</navigation>